<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.application.developer"
	android:versionCode="1"
	android:versionName="1.0">

	<uses-sdk
		android:minSdkVersion="21"
		android:targetSdkVersion="26"/>

	<uses-permission
		android:name="android.permission.READ_EXTERNAL_STORAGE"/>

	<uses-permission
		android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

	<uses-permission
		android:name="android.permission.INTERNET"/>

	<user-permission
		android:name="android.permission.ACCESS_NETWORK_STATE"/>

	<user-permission
		android:name="android.permission.READ_PHONE_STATE"/>

	<user-permission
		android:name="android.permission.ACCESS_WIFI_STATE"/>

	<user-permission
		android:name="android.permission.GET_TASKS"/>

	<uses-permission
		android:name="android.permission.REQUEST_INSTALL_PACKAGES"/>

	<uses-permission
		android:name="android.permission.REPLACE_EXISTING_PACKAGE"/>

	<application
		android:allowBackup="true"
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/AppTheme"
		android:resizeableActivity="false">

		<activity
			android:name=".MainActivity"
			android:label="@string/app_name">

			<intent-filter>

				<action
					android:name="android.intent.action.MAIN"/>

				<category
					android:name="android.intent.category.LAUNCHER"/>

			</intent-filter>

		</activity>

		<provider
			android:name="androidx.core.content.FileProvider"
			android:authorities="com.application.developer.fileprovider"
			android:exported="false"
			android:grantUriPermissions="true">

			<meta-data
				android:name="android.support.FILE_PROVIDER_PATHS"
				android:resource="@xml/file_paths"/>

		</provider>

		<activity
			android:name=".FilesActivity"
			android:label="项目"/>

		<activity
			android:name=".SettingActivity"
			android:label="设置"/>

		<activity
			android:name=".FeedActivity"
			android:label="意见反馈"/>

		<activity
			android:name=".AlreadyActivity"
			android:label="导入项目"/>

		<activity
			android:name=".DatailsActivity"
			android:label="项目详情"/>

		<activity
			android:name=".activity.EditCodeActivity"
			android:label="编辑代码"
			android:theme="@style/CodeTheme"/>

		<activity
			android:name=".ImageActivity"
			android:label="图片查看器"/>

		<activity
			android:name=".WebActivity"
			android:label="WebView"/>

	</application>

</manifest>

